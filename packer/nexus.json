{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "",
    "subnet_id": "",
    "vpc_id": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "ami-1fbe067e",
      "instance_type": "t2.micro",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "associate_public_ip_address": true,
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "ascent-nexus {{timestamp}}",
      "ami_block_device_mappings": [
        {
          "delete_on_termination": false,
          "device_name": "/dev/sdb",
          "volume_type": "gp2",
          "volume_size": 500
        }
      ],
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 10,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_type": "gp2",
          "volume_size": 500
        }
      ],
      "tags": {
        "name": "ascent-nexus"
      },
      "snapshot_tags": 
      {
        "name": "ascent-nexus"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "nexus.properties",
      "destination": "~/nexus.properties"
    },
    {
      "type": "file",
      "source": "githuboauth.properties",
      "destination": "~/githuboauth.properties"
    },
    {
      "type": "file",
      "source": "nexus.vmoptions",
      "destination": "~/nexus.vmoptions"
    },
    {
      "type": "shell",
      "scripts": [
        "mount-ebs.sh",
        "install-java.sh",
        "install-nexus.sh",
        "plugin-github-oauth.sh"
      ]
    }
  ]
}
